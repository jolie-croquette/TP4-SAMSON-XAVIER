<Window x:Class="TP4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP4"
        mc:Ignorable="d"
        Title="EquiGuest" Height="720" Width="1200" Background="#FFBDBDBD" Icon="/favicon.png">

    <Window.CommandBindings>
        <CommandBinding Command="New" CanExecute="NewCommand_CanExecute" Executed="NewCommand_Executed" />
    </Window.CommandBindings>

    <StackPanel x:Name="stkPrincipal" Orientation="Horizontal">


        <StackPanel x:Name="stkSideBar" Background="#FF272727" Width="165" VerticalAlignment="Top" Height="704" d:IsLocked="True">

            <TextBlock x:Name="TxtBlockTitre" TextWrapping="Wrap" Margin="0,10,0,0" FontFamily="Bahnschrift Light SemiCondensed" FontSize="36" HorizontalAlignment="Center" Foreground="#FFFFAF00" TextAlignment="Center" Text="EquiGuest"/>
            <Rectangle x:Name="Ligne" Height="1" Stroke="White" Width="74" Margin="0,0,0,10"/>

            <Border x:Name="BorderBtn" Background="#FF336F27" HorizontalAlignment="Center" CornerRadius="5">
                <Button x:Name="BtnChargerFichier" Content="Charger CSV" HorizontalAlignment="Center" Click="BtnChargerFichier_Click" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" Padding="4,4,4,4" FontSize="16" VerticalAlignment="Center" Foreground="White" BorderBrush="{x:Null}">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </Border>


        </StackPanel>
        <StackPanel x:Name="stkContenue" Width="1025" Margin="10,0,0,0">
            <Label x:Name="lblSelectEmployer" Content="Employés" HorizontalAlignment="Left" Width="150" FontStyle="Italic" FontSize="14" Margin="0,5,0,0"/>
            <StackPanel x:Name="stkSelectionEmployer" HorizontalAlignment="Left" Orientation="Horizontal">
                <ComboBox x:Name="cmbEmployer" FontSize="16" SelectionChanged="cmbEmployer_SelectionChanged" Height="27.28" Width="150"/>
                <Button x:Name="BtnModifier" Content="Modifier" Width="150" Height="27.28" Margin="10,0,0,0" Click="BtnModifier_Click"/>
                <TextBlock x:Name="TxtBlockModification" TextWrapping="Wrap" Text="MODIFICATION EN COURS" Foreground="Red" FontSize="36" Margin="75,0,0,0" HorizontalAlignment="Center" FontStyle="Italic" TextDecorations="Underline" FontWeight="Bold" Visibility="Hidden"/>
            </StackPanel>
            <GroupBox x:Name="GrbInfoEmployer" Header="Information" Margin="0,10,0,0" Width="940" BorderBrush="Black">
                <StackPanel x:Name="StkInfoEmployer" Orientation="Horizontal">
                    <Image x:Name="imgEmployer" Height="171" Source="/user.png" MouseLeftButtonUp="ImgEmployer_Click" MouseEnter="ImgEmployer_MouseEnter" MouseLeave="ImgEmployer_MouseLeave" Stretch="UniformToFill" Margin="10,0,0,0"/>
                    <StackPanel x:Name="StkInfo" Margin="10,0,0,0">
                        <TextBlock x:Name="TxtBlockPrenom" TextWrapping="Wrap" Text="Albert" FontSize="24" VerticalAlignment="Top" Height="33.9233333333333"/>
                        <TextBlock x:Name="TxtBlockNom" TextWrapping="Wrap" Text="Bathie" Height="28.6" VerticalAlignment="Top" FontSize="20"/>
                        <TextBlock x:Name="TxtBlockID" TextWrapping="Wrap" Text="Numéro d'employé : xx" Margin="0,5,0,0" FontSize="14"/>
                        <StackPanel x:Name="StkAge" Margin="0,10,0,0" Orientation="Horizontal">
                            <TextBlock x:Name="TxtBlockDateNaissance" TextWrapping="Wrap" Text="Date de naissance : " VerticalAlignment="Center" FontSize="14"/>
                            <DatePicker x:Name="DatePckNaissance" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="1,1,1,1" Background="{x:Null}" BorderBrush="{x:Null}" IsEnabled="False"/>
                            <TextBlock x:Name="TxtBlockAge" TextWrapping="Wrap" Text="(xx ans)" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel x:Name="StkSalaire" Orientation="Horizontal">
                            <Label x:Name="LblSalaire" Content="Salaire annuel :" HorizontalAlignment="Left" Padding="0,5,5,5"/>
                            <TextBox x:Name="TxtBoxSalaire" TextWrapping="Wrap" Text="123 456 789,00$" Background="{x:Null}" VerticalAlignment="Center" IsEnabled="False" BorderBrush="{x:Null}" FontSize="14" Padding="1,1,1,1"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox x:Name="GrbContactEmployer" Height="100" Header="Contact" BorderBrush="Black" Width="940" Margin="0,20,0,0">
                <StackPanel x:Name="StkContactEmployer">
                    <StackPanel x:Name="StkCellulaire" Orientation="Horizontal">
                        <Label x:Name="LblCellulaire" Content="Numéro de téléphone : " FontSize="14"/>
                        <TextBox x:Name="TxtBoxCellulaire" TextWrapping="Wrap" Text="(123) 456-7890" Background="{x:Null}" FontSize="14" IsEnabled="False" BorderBrush="{x:Null}" Padding="1,1,1,1" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel x:Name="StkContactUrgence" Margin="0,5,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel x:Name="StkContactUrgenceNumero" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,50,0">
                            <Label x:Name="LblContactUrgence" Content="Contact d'urgence : " FontSize="14" VerticalAlignment="Center" Foreground="Black"/>
                            <TextBox x:Name="TxtBoxContactUrgence" TextWrapping="Wrap" Text="(123) 456-7890" Background="{x:Null}" FontSize="14" BorderBrush="{x:Null}" Padding="1,1,1,1" VerticalAlignment="Center" IsEnabled="False"/>
                        </StackPanel>
                        <StackPanel x:Name="StkContactUrgenceInfo" Orientation="Horizontal">
                            <Label x:Name="LblLienAvecEmployer" Content="Lien avec l'employé : " FontSize="14" Foreground="Black"/>
                            <ComboBox x:Name="CmbContactUrgence" FontSize="14" IsEnabled="False" VerticalAlignment="Center" SelectedIndex="0" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="-1,0,0,0">
                                <ComboBoxItem>Conjoint(e)</ComboBoxItem>
                                <ComboBoxItem>Maman</ComboBoxItem>
                                <ComboBoxItem>Papa</ComboBoxItem>
                                <ComboBoxItem>Grand-papa</ComboBoxItem>
                                <ComboBoxItem>Grand-maman</ComboBoxItem>
                                <ComboBoxItem>Soeur</ComboBoxItem>
                                <ComboBoxItem>Frere</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <StackPanel x:Name="StkSaveCancel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" Visibility="Hidden">
                <Button x:Name="btnSauvegarder" Content="Sauvegarder" Margin="0,0,5,0" Click="btnSauvegarder_Click" Padding="10,12,10,10"/>
                <Button x:Name="btnAnnuler" Content="Annuler" Margin="5,0,0,0" IsCancel="True" Click="btnAnnuler_Click" Padding="10,13,10,10"/>
            </StackPanel>
        </StackPanel>


    </StackPanel>


</Window>
